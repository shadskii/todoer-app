<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="788.0" prefWidth="600.0" stylesheets="@global.css"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="freetimelabs.desktop.app.MainScreenController">
   <center>
       <VBox BorderPane.alignment="CENTER">
           <children>
               <ListView fx:id="itemList" editable="true" maxHeight="1.7976931348623157E308"
                         maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
           </children>
       </VBox>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
             <TextField fx:id="description" promptText="To Do" HBox.hgrow="ALWAYS">
                 <font>
                     <Font size="18.0"/>
                 </font>
             </TextField>
             <Button fx:id="addItem" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="+">
                 <font>
                     <Font name="Trebuchet MS" size="20.0"/>
                 </font>
             </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
